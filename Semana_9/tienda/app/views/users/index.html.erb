<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Gender</th>
      <th>Phone</th>
      <th>Card</th>
      <th>Email</th>
      <th>Identification type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nombre_completo %></td>
        <td><%= user.last_name %></td>
        <td><%= user.address %></td>
        <td><%= user.gender %></td>
        <td><%= user.phone %></td>
        <td><%= user.card_id %></td>
        <td><%= user.email %></td>
        <td><%= user.identification_type %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user.id) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

